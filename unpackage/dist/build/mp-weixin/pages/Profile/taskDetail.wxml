<view class="container"><block wx:if="{{detail&&detail.state==1}}"><view class="app-head"><view class="app-head-title"><text class="title">{{detail.name}}</text><block wx:if="{{detail.state==1}}"><view class="task-tag color-5">审核中</view></block></view><view class="app-head-cont"><text class="vip">{{"VIP:￥"+detail.vip_moeny}}</text><text class="not">{{"普通:￥"+detail.moeny}}</text></view><view class="app-head-foot">{{'截止日期：'+detail.end_time+''}}</view></view></block><block wx:if="{{detail&&detail.state==3}}"><block><view class="app-head"><view class="app-head-title"><text class="title">{{detail.name}}</text><view class="task-tag color-5">未通过</view></view><view class="app-head-cont"><text class="vip">{{"VIP:￥"+detail.vip_moeny}}</text><text class="not">{{"普通:￥"+detail.moeny}}</text></view><view class="app-head-foot">{{'截止日期：'+detail.end_time+''}}</view><view data-event-opts="{{[['tap',[['editTask',['$0'],['detail.task_id']]]]]}}" class="app-head-btn defalut-btn" bindtap="__e">去修改</view></view><view class="app-context"><view class="app-title"><view class="Title-line"></view><view class="Title-text">未通过原因:</view></view><view class="app-context-text"><text>{{detail.why}}</text></view></view></block></block><block wx:if="{{detail&&detail.state==2}}"><view class="app-head"><view class="app-head-title"><text class="title">{{detail.name}}</text><view class="task-tag color-5">通过未付款</view></view><view class="app-head-cont"><text class="vip">{{"VIP:￥"+detail.vip_moeny}}</text><text class="not">{{"普通:￥"+detail.moeny}}</text></view><view class="app-head-foot">{{'截止日期：'+detail.end_time+''}}</view><view data-event-opts="{{[['tap',[['pay',['$0'],['detail.task_id']]]]]}}" class="app-head-btn defalut-btn" bindtap="__e">去付款</view></view></block><block wx:if="{{detail&&(detail.state==4||detail.state==5)}}"><view class="app-task"><view class="app-task-head"><view class="task-title"><view class="task-title-l"><text class="title">{{detail.name}}</text><text class="price">{{"￥"+detail.moeny}}</text><block wx:if="{{detail.state==4}}"><view class="task-tag color-1">已上架</view></block><block wx:if="{{detail.state==5}}"><view class="task-tag color-6">已结束</view></block></view><text class="task-text">{{detail.end_time+"到期"}}</text></view><view class="task-progress"><u-line-progress vue-id="f83a4a1e-1" active-color="#FA771E" inactive-color="#FFFFFF" show-percent="{{false}}" height="14" percent="{{ratio}}" bind:__l="__l"></u-line-progress></view><view class="task-foot"><view class="task-foot-num"><text class="active">{{detail.member_task}}</text><text>人已赚到赏金</text></view><view class="task-foot-num"><text>剩余</text><text class="active">{{detail.shen_count}}</text><text>份</text></view></view></view><view class="app-nav"><block wx:for="{{title}}" wx:for-item="nav" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['changeNav',[index,'$0'],[[['title','',index,'id']]]]]]]}}" class="{{['app-nav-item',(index===current)?'active':'']}}" bindtap="__e">{{nav.title}}</view></block></view><view class="app-box"><block wx:if="{{taskItem.length>0}}"><block><block wx:for="{{taskItem}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['jumpDetail',['$0'],[[['taskItem','id',item.id,'id']]]]]]]}}" class="app-box-item" bindtap="__e"><view class="app-box-head"><view class="app-box-head-l"><image src="{{item.avatar}}"></image><text class="name">{{item.nickname}}</text></view><view class="app-box-head-r"><block wx:if="{{item.state==1}}"><view class="task-tag color-4">未提交</view></block><block wx:if="{{item.state==2}}"><view class="task-tag color-6">未审核</view></block><block wx:if="{{item.state==3}}"><view class="task-tag color-5">未通过</view></block><block wx:if="{{item.state==4}}"><view class="task-tag color-3">已完成</view></block></view></view><view class="app-box-foot"><text>{{item.ymd}}</text><text class="active">{{item.his}}</text></view></view></block><block wx:if="{{taskItem.length>3}}"><u-loadmore vue-id="f83a4a1e-2" status="{{status}}" margin-top="50" color="#333" margin-bottom="30" load-text="{{loadText}}" bind:__l="__l"></u-loadmore></block></block></block><block wx:else><block><z-empty vue-id="f83a4a1e-3" text="暂无该分类任务~" bind:__l="__l"></z-empty></block></block></view></view></block><view hidden="{{!(isSkeleton)}}" class="app-skeleton"></view></view>