.app-box {
  width: 690rpx;
  margin: 0 auto;
  height: 198rpx;
  border-bottom: 1rpx solid #E2E2E5;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.app-box-item {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 80rpx;
}
.app-box-item .icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.app-box-item .title {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  margin-right: 20rpx;
}
.app-box-input {
  padding-left: 100rpx;
  width: 100%;
  height: 80rpx;
}
.app-box-input input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
}
.app-box-input .placeholder {
  font-size: 28rpx;
  color: #999999;
}
.defalut-btn {
  width: 690rpx;
  height: 88rpx;
  -webkit-border-radius: 45rpx;
          border-radius: 45rpx;
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
}
.app-input {
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 30rpx 30rpx 0 30rpx;
}
.app-input-head {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 80rpx;
}
.app-input-head .title {
  font-size: 26rpx;
  color: #999999;
